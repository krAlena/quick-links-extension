{
    "version": "1.0.0",
    "manifest_version": 3,
    "name": "Quick links",
    "description": "Quickly search and access your favorite browser's links or recently visited websites.",
    "action": {
        "default_popup": "popup.html",
        "default_title": "Quick links",
        "default_icon": {
            "16": "/images/links-16.png",
            "32": "/images/links-32.png",
            "48": "/images/links-48.png",
            "128": "/images/links-128.png"
        }
    },
    "icons": {
        "16": "/images/links-16.png",
        "32": "/images/links-32.png",
        "48": "/images/links-48.png",
        "128": "/images/links-128.png"
    },
    "permissions": [
        "bookmarks",
        "history"
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    }
}