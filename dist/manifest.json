{
    "version": "1.0.0",
    "manifest_version": 3,
    "name": "Quick browser's links",
    "description": "Manage your last history and favorite links",
    "action": {
        "default_popup": "popup.html",
        "default_title": "Quick browser's links",
        "default_icon": {
            "16": "/images/chrome-icon.png",
            "32": "/images/chrome-icon.png",
            "48": "/images/chrome-icon.png",
            "128": "/images/chrome-icon.png"
        }
    },
    "icons": {
        "16": "/images/chrome-icon.png",
        "32": "/images/chrome-icon.png",
        "48": "/images/chrome-icon.png",
        "128": "/images/chrome-icon.png"
    },
    "permissions": ["tabs", "activeTab", "scripting", "storage", "bookmarks"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
    {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"]
    }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    }
}